<!-- form -->
<div class="container my-5  ">
  <h2 class="text-center fw-bold"> Get In Touch </h2>
<form class="w-50 mx-auto" >
  
  <div class="mb-3">
    <label for="name" class="form-label fw-bold  text-light">Name </label>
    <input type="text" class="form-control border border-black" id="name">
</div>
<div class="mb-3">
  <label for="email" class="form-label fw-bold  text-light">Email</label>
  <input type="text" class="form-control border border-black" id="email">
</div>
<div class="mb-3">
  <label for="phone" class="form-label fw-bold  text-light">Phone Number </label>
  <input type="text" class="form-control border border-black" id="phone">
</div>
<div class="input-group mb-3 ">
  <label class="input-group-text fw-bold border border-black mt-2" for="subject"> Subject </label>
  <select class="form-select border border-black mt-2" id="subject">
    <option selected>Choose...</option>
    <option value="1">Frontend Developer </option>
    <option value="2">Backend Developer</option>
    <option value="3">Fullstack Developer</option>
  </select> 
</div>

<div class="mb-3">
  <label for="content" class="form-label fw-bold text-light">Your message </label>
  <textarea class="form-control border border-black" id="message" style="resize: none; height: 200px;"></textarea>
</div>
  <div class="d-flex justify-content-end mt-4 px-2">
  <button type="submit" class="btn btn-dark" onclick="getData()">Post Blog</button>
